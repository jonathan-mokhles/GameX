@{
    ViewData["Title"] = "Manage Users";
    ViewData["AdminNavTitle"] = "Users";
    Layout = "~/Areas/Admin/Views/shared/_IndexLayout.cshtml";
}
@model List<UserResponseDTO>

<!-- ***** Admin Content Start ***** -->
<div class="admin-section section">
    <div class="container">
        <!-- Control Panel -->
        <div class="control-panel">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="search-box">
                        <input type="text" id="searchInput" placeholder="Search users by name, email...">
                        <button class="search-btn">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="control-actions">
                        <select class="filter-select" id="roleFilter">
                            <option value="">All Roles</option>
                            <option value="admin">Admin</option>
                            <option value="customer">Customer</option>
                        </select>
                        <a asp-area="Admin" asp-controller="Users" asp-action="Add" class="add-btn" >
                            <i class="fa fa-plus"></i> Add New User
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="admin-table-wrapper">
            <div class="table-stats">
                <div class="stat-item">
                    <span class="stat-label">Total Users</span>
                    <span class="stat-value">@Model.Count()</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Admins</span>
                    <span class="stat-value">@Model.Where(u => u.Role == "Admin").Count()</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Customers</span>
                    <span class="stat-value">@Model.Where(u => u.Role == "Customer").Count()</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Registered Today</span>
                    <span class="stat-value">@Model.Where(u => u.RegistrationDate.Day == DateTime.Today.Day).Count()</span>
                </div>
            </div>

            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAll">
                            </th>
                            <th>first Name</th>
                            <th>last Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><input type="checkbox" class="row-checkbox"></td>
                                <td class="id-badge"> @user.Id</td>
                                <td><span class="user-name first-name">@user.FirstName</span></td>
                                <td><span class="user-name last-name">@user.LastName</span></td>
                                <td class="email">@user.Email</td>
                                <td class="phone">@user.PhoneNumber</td>
                                @if(user.Role == "Customer")
                                {
                                    <td><span class="role-badge customer">Customer</span></td>
                                }
                                else
                                {
                                    <td><span class="role-badge admin">Admin</span></td>
                                }
                                <td>@user.RegistrationDate.ToString("MMM, dd yyyy")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="action-btn edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form method="post" asp-area="Admin" asp-controller="Users"  asp-action="Delete" asp-route-id="@user.Id"
                                        onsubmit="return confirmDelete(this);" style="display:inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-btn delete"> <i class="fa fa-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
</div>
</div>
<!-- ***** Admin Content End ***** -->


