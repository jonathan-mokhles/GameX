<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <title>@ViewData["Title"]</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/templatemo-lugx-gaming.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky background-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <img src="~/images/logo.png" alt="" style="width: 158px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">

                            <li><a asp-controller="home" asp-action="index">Home</a></li>

                            <li><a asp-area="Admin" asp-controller="Users" asp-action="Index" class="active">Admin panel</a></li>

                            <li><a asp-controller="home" asp-action="about">About Us</a></li>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="user-menu-item">
                                    <a href="javascript:void(0);" class="user-toggle">
                                        <i class="fa fa-user"></i> @(User.Identity?.Name?.Split("@")[0]) <i class="fa fa-chevron-down"></i>
                                    </a>
                                    <ul class="user-dropdown">
                                        <li><a asp-controller="Account" asp-action="Profile"><i class="fa fa-user-circle"></i> My Profile</a></li>
                                        <li class="divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="logout-btn"><i class="fa fa-sign-out-alt"></i> Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="user-menu-item">
                                    <a href="javascript:void(0);" class="user-toggle">
                                        <i class="fa fa-user"></i> Guest <i class="fa fa-chevron-down"></i>
                                    </a>
                                    <ul class="user-dropdown">
                                        <li>
                                            <a asp-controller="account" asp-action="signIn">
                                                <i class="fa-solid fa-right-to-bracket"></i>SignIn
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="account" asp-action="register">
                                                <i class="fa-solid fa-user-plus"></i>Sign Up
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                            }
                            <a class='menu-trigger'>
                                <span>Menu</span>
                            </a>
                        </ul>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- ***** Page Heading Start ***** -->
    <div class="page-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Admin Panel</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Navigation Tabs -->
    <div class="admin-section section">
        <div class="container">
            <div class="admin-nav">
                @if (ViewBag.AdminNavTitle == "Users")
                {
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="admin-nav-item active">
                        <i class="fa fa-users"></i>
                        <span>Users</span>
                    </a>
                }
                else
                {
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="admin-nav-item">
                        <i class="fa fa-users"></i>
                        <span>Users</span>
                    </a>
                }
                @if (ViewBag.AdminNavTitle == "Games")
                {
                    <a asp-area="Admin" asp-controller="Games" asp-action="Index" class="admin-nav-item active">
                        <i class="fa fa-gamepad"></i>
                        <span>Games</span>
                    </a>
                }
                else
                {
                    <a asp-area="Admin" asp-controller="Games" asp-action="Index" class="admin-nav-item">
                        <i class="fa fa-gamepad"></i>
                        <span>Games</span>
                    </a>
                }
            </div>
        </div>
    </div>


        @RenderBody()

    <footer>
        <div class="container">
            <div class="col-lg-12">
                <p>
                    Copyright © 2048 LUGX Gaming Company. All rights reserved. &nbsp;&nbsp; <a rel="nofollow"
                                                                                               href="https://templatemo.com" target="_blank">Design: TemplateMo</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Bulk Actions Bar (appears when rows are selected) -->
    <div class="bulk-actions" id="bulkActions" style="display: none;">
        <span class="bulk-count">3 items selected</span>
        <button class="bulk-btn delete-selected">
            <i class="fa fa-trash"></i> Delete Selected
        </button>
        <button class="bulk-btn export-selected">
            <i class="fa fa-download"></i> Export Selected
        </button>
        <button class="bulk-btn deselect-all">
            <i class="fa fa-times"></i> Deselect All
        </button>
    </div>

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/isotope.min.js"></script>
    <script src="~/js/owl-carousel.js"></script>
    <script src="~/js/counter.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/admin.js"></script>

</body>
</html>
