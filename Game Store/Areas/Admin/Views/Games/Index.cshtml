@{
    ViewData["Title"] = "Manage Games";
    ViewData["AdminNavTitle"] = "Games";
    Layout = "~/Areas/Admin/Views/shared/_IndexLayout.cshtml";
}
@model IEnumerable<GameResponseDTO>

<div class="admin-section section">
    <div class="container">

        <!-- Control Panel -->
        <div class="control-panel">
            <div class="row align-items-center">
        <div class="col-lg-6">
            <div class="search-box">
                <input type="text" id="searchInput" placeholder="Search games by title, genre...">
                <button class="search-btn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
            <div class="col-lg-6">
            <div class="control-actions">
                <select class="filter-select" id="genreFilter">
                    <option value="">All Genres</option>
                    <option value="action">Action</option>
                    <option value="adventure">Adventure</option>
                    <option value="rpg">RPG</option>
                    <option value="sports">Sports</option>
                    <option value="racing">Racing</option>
                    <option value="horror">Horror</option>
                </select>
                <select class="filter-select" id="platformFilter">
                    <option value="">All Platforms</option>
                    <option value="pc">PC</option>
                    <option value="ps5">PlayStation 5</option>
                    <option value="xbox">Xbox Series X/S</option>
                    <option value="switch">Nintendo Switch</option>
                </select>
                <a class="add-btn" asp-area="Admin" asp-controller="Games" asp-action="Add">
                    <i class="fa fa-plus"></i> Add New Game
                </a>
            </div>
        </div>
        </div>
    
</div>

        <!-- Games Table -->
        <div class="admin-table-wrapper">

    <div class="table-stats">
        <div class="stat-item">
            <span class="stat-label">Total Games</span>
            <span class="stat-value">@Model.Count()</span>
        </div>
        <div class="stat-item">
            <span class="stat-label">In Stock</span>
            <span class="stat-value">@Model.Count(g => g.StockQuantity>1)</span>
        </div>
        <div class="stat-item">
            <span class="stat-label">Out of Stock</span>
                <span class="stat-value">@Model.Count(g => g.StockQuantity == 0)</span>
        </div>
        <div class="stat-item">
            <span class="stat-label">On Sale</span>
                <span class="stat-value">@Model.Count(g => g.OldPrice>0)</span>
        </div>
    </div>

    <div class="table-responsive">
        <table class="admin-table games-table">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" id="selectAll">
                    </th>
                    <th>Game</th>
                    <th>Genre</th>
                    <th>Platform</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Release Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var game in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="row-checkbox"></td>
                            <td class="id-badge">@game.Id</td>
                            <td>
                                <div class="game-info">
                                        <img src="~/images/games/@game.ImageUrl" alt="Game" class="game-thumb">
                                    <div class="game-details">
                                        <span class="game-title">@game.Title</span>
                                    </div>
                                </div>
                            </td>
                            <td> <span class="genre-badge  @ViewBag.GamesClass[game.Genre]">@game.Genre</span> </td>
                            <td><span class="platform-badge @ViewBag.GamesClass[game.Platform]">@game.Platform</span></td>
                            <td>
                                <div class="price-info">
                                    <span class="current-price">$@game.Price</span>
                                    <span class="old-price">$@game.OldPrice</span>
                                </div>
                            </td>
                            <td><span class="stock-badge in-stock">@game.StockQuantity</span></td>
                            <td>@game.ReleaseDate</td>
                            <td>
                                <div class="action-buttons">
                                     <a class="action-btn view" asp-controller="Game" asp-action="details" asp-route-id="@game.Id">
                                            <i class="fa fa-eye"></i>
                                    </a>
                                    <button class="action-btn edit" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete" title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>

</div>

    </div>
</div>
