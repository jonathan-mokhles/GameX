@{
    ViewBag.Title = Model.Title;
}
@model GameResponseDTO

<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="left-image">
                    <img src="~/images/games/@Model.ImageUrl" alt="">
                </div>
            </div>
            <div class="col-lg-7 align-self-center">
                <h4>@Model.Title</h4>
                <span class="price"><em>$@Model.OldPrice</em> $@Model.Price</span>
                <p>@Model.Description</p>

                <ul>
                    <li><span>Genre:</span> <a href="#">@Model.Genre.Name</a></li>
                    <li><span>Platform:</span> <a href="#">@Model.Platform.Name</a></li>
                    <li><span>Release Date:</span>@Model.ReleaseDate.ToString("MMM yyyy")</li>
                </ul>
            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>


